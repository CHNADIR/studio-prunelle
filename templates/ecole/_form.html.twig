{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Informations générales</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2 mb-3">
                    {{ form_row(form.code) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(form.genre) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(form.nom) }}
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Coordonnées</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_row(form.rue) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    {{ form_row(form.codePostal) }}
                </div>
                <div class="col-md-8 mb-3">
                    {{ form_row(form.ville) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.telephone) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(form.email) }}
                </div>
            </div>
        </div>
    </div>

    <div class="form-check form-switch mb-4">
        {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.active, null, {'label_attr': {'class': 'form-check-label'}}) }}
        <div class="form-text">{{ form_help(form.active) }}</div>
    </div>
    
    <div class="d-flex justify-content-between">
        <a href="{{ path('app_ecole_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
