{% extends 'base.html.twig' %}

{% block title %}Liste des écoles{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des écoles</h1>
        <a href="{{ path('app_ecole_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Ajouter une école
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Type</th>
                            <th>Nom</th>
                            <th>Ville</th>
                            <th>Code postal</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ecole in ecoles %}
                        <tr>
                            <td>{{ ecole.code }}</td>
                            <td>{{ ecole.genre }}</td>
                            <td>{{ ecole.nom }}</td>
                            <td>{{ ecole.ville }}</td>
                            <td>{{ ecole.codePostal }}</td>
                            <td>
                                {% if ecole.active %}
                                    <span class="badge bg-success">Active</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactive</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_ecole_show', {'id': ecole.id}) }}" class="btn btn-info">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_ecole_edit', {'id': ecole.id}) }}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucune école trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
