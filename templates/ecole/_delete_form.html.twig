<form method="post" action="{{ path('app_ecole_delete', {'id': ecole.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette école?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ecole.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
