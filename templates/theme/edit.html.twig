{% extends 'base.html.twig' %}

{% block title %}Modifier Thème: {{ theme.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Modifier Thème: <span class="text-primary">{{ theme.name }}</span></h1>
        <a href="{{ path('app_theme_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ include('theme/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-end">
        {{ include('theme/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
