{# filepath: templates/theme/_delete_form.html.twig #}
<form method="post" action="{{ path('app_theme_delete', {'id': theme.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce thème ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
