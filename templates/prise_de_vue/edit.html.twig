{% extends 'base.html.twig' %}

{% block title %}Modifier Prise de Vue #{{ prise_de_vue.id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            {% if can_edit_full %}
                Modifier Prise de Vue #{{ prise_de_vue.id }}
            {% else %}
                Ajouter/Modifier Commentaire - Prise de Vue #{{ prise_de_vue.id }}
            {% endif %}
        </h1>
        <a href="{{ path('app_prise_de_vue_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ include('prise_de_vue/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    {% if can_delete %}
    <div class="mt-3 d-flex justify-content-end">
        {{ include('prise_de_vue/_delete_form.html.twig') }}
    </div>
    {% endif %}
</div>
{% endblock %}
