{% extends 'base.html.twig' %}

{% block title %}Administration - Studio Prunelle{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des utilisateurs</h1>
        <a href="{{ path('app_admin') }}" class="btn btn-secondary">Retour au tableau de bord</a>
    </div>

    <h1>Tableau de bord d'administration</h1>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Gestion des utilisateurs</h5>
                </div>
                <div class="card-body">
                    <p>Gérer les comptes utilisateurs et les droits d'accès.</p>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-outline-primary">Accéder</a>
                </div>
            </div>
        </div>
        
        {# Vous pouvez ajouter d'autres modules d'administration ici #}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Paramètres du site</h5>
                </div>
                <div class="card-body">
                    <p>Configurer les paramètres généraux du site.</p>
                    <button class="btn btn-outline-success" disabled>Bientôt disponible</button>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Statistiques</h5>
                </div>
                <div class="card-body">
                    <p>Consulter les statistiques d'utilisation du site.</p>
                    <button class="btn btn-outline-info" disabled>Bientôt disponible</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
