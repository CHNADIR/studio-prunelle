{# filepath: templates/admin/user/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier Utilisateur: {{ user.email }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Modifier Utilisateur: <span class="text-primary">{{ user.email }}</span></h1>
        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    {{ include('admin/user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="mt-3">
        {% if app.user != user %} {# Empêche l'auto-suppression directe via ce bouton #}
            {{ include('admin/user/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
{% endblock %}