<form method="post" action="{{ path('app_planche_delete', {'id': planche.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette planche ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ planche.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
